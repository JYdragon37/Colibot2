<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coli-Bot Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Pretendard', -apple-system, BlinkMacSystemFont, system-ui, Roboto, sans-serif;
            background-color: #f8f9fa;
        }

        .dashboard-header {
            background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
            text-align: center;
            border-radius: 0 0 1rem 1rem;
        }

        .current-time {
            font-size: 1.2rem;
            opacity: 0.9;
        }

        .card {
            border: none;
            border-radius: 1rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 1.5rem;
            transition: transform 0.2s;
        }

        .card:hover {
            transform: translateY(-5px);
        }

        .card-header {
            background: #f8f9fa;
            border-bottom: none;
            font-weight: bold;
            padding: 1rem 1.5rem;
        }

        .weather-card img {
            max-width: 100%;
            height: auto;
            border-radius: 0.5rem;
        }

        .news-item {
            padding: 0.5rem 0;
            border-bottom: 1px solid #e9ecef;
        }

        .news-item:last-child {
            border-bottom: none;
        }

        .news-section {
            font-size: 0.8rem;
            color: #6c757d;
        }

        .trending-item {
            background: #f8f9fa;
            padding: 0.5rem 1rem;
            margin: 0.25rem 0;
            border-radius: 0.5rem;
        }

        @media (max-width: 768px) {
            .container {
                padding: 0.5rem;
            }

            .card {
                margin-bottom: 1rem;
            }

            .dashboard-header {
                padding: 1.5rem 0;
            }
        }
    </style>
</head>
<body>
    <div class="dashboard-header">
        <div class="container">
            <h1 class="mb-2">Coli-Bot Dashboard</h1>
            <div class="current-time" id="currentTime"></div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <!-- 날씨 섹션 -->
            <div class="col-md-6 mb-4">
                <div class="card weather-card">
                    <div class="card-header">현재 날씨</div>
                    <div class="card-body">
                        <img src="<%= weatherImage %>" alt="날씨 정보">
                    </div>
                </div>
            </div>

            <!-- 트렌드 섹션 -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">실시간 트렌드</div>
                    <div class="card-body">
                        <% trending.forEach((trend, index) => { %>
                            <div class="trending-item">
                                <%= (index + 1) + '. ' + trend %>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>

            <!-- 뉴스 섹션 -->
            <div class="col-12">
                <div class="card">
                    <div class="card-header">주요 뉴스</div>
                    <div class="card-body">
                        <% news.forEach(item => { %>
                            <div class="news-item">
                                <span class="news-section"><%= item.section %></span>
                                <a href="<%= item.link %>" target="_blank" class="text-decoration-none">
                                    <%= item.title %>
                                </a>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function updateTime() {
            const now = new Date();
            const options = {
                year: 'numeric',
                month: 'long',
                day: 'numeric',
                weekday: 'long',
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit',
                hour12: false
            };
            document.getElementById('currentTime').textContent = 
                now.toLocaleDateString('ko-KR', options);
        }

        updateTime();
        setInterval(updateTime, 1000);
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>